<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cl.cavallinux</groupId>
	<artifactId>jisocreator</artifactId>
	<version>0.0.1</version>
	<packaging>pom</packaging>
	<name>JisoCreator</name>
	<description>MKISOFS Frontend</description>
	<modules>
		<module>jisocreator-model</module>
		<module>jisocreator-gui</module>
		<module>jisocreator-action</module>
	</modules>
	
	<properties>
		<java.version>1.8</java.version>
		<maven.compiler.plugin>3.5.1</maven.compiler.plugin>
		<swt.platform.version>linux-x86_64</swt.platform.version>
		<xstream.version>1.4.20</xstream.version>
		<slf4j.version>1.7.7</slf4j.version>
		<jface.version>3.4.0</jface.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.thoughtworks.xstream</groupId>
			<artifactId>xstream</artifactId>
			<version>${xstream.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.swt</groupId>
			<artifactId>swt-linux-x86_64</artifactId>
			<version>${jface.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jface</groupId>
			<artifactId>jface</artifactId>
			<version>${jface.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.core</groupId>
			<artifactId>commands</artifactId>
			<version>${jface.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>common</artifactId>
			<version>${jface.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>osgi</artifactId>
			<version>${jface.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.ui</groupId>
			<artifactId>workbench</artifactId>
			<version>${jface.version}</version>
		</dependency>
	</dependencies>
</project>
